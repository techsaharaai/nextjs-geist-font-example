# ParkNest Pro Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/parknest_pro"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="parknest_pro"
DATABASE_USERNAME="postgres"
DATABASE_PASSWORD="your_secure_password"

# =============================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET="your_super_secure_jwt_secret_key_here_min_32_chars"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your_super_secure_refresh_secret_key_here"
JWT_REFRESH_EXPIRES_IN="7d"

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT="3000"
API_HOST="localhost"
API_BASE_URL="http://localhost:3000"
CORS_ORIGIN="http://localhost:8000"

# =============================================================================
# ADMIN PANEL CONFIGURATION
# =============================================================================
ADMIN_PORT="8000"
ADMIN_BASE_URL="http://localhost:8000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api/v1"

# =============================================================================
# EMAIL CONFIGURATION (Mock WhatsApp Alternative)
# =============================================================================
# Using Gmail SMTP for notifications and OTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@parknestpro.com"
FROM_NAME="ParkNest Pro"

# =============================================================================
# PAYMENT GATEWAY (Mock/Test Mode)
# =============================================================================
# Stripe Test Mode Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Mock Payment Settings
PAYMENT_MODE="test"  # test | live
ENABLE_CASH_PAYMENTS="true"
ENABLE_UPI_PAYMENTS="true"
ENABLE_CARD_PAYMENTS="true"

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Local file storage (S3 alternative)
STORAGE_TYPE="local"  # local | s3
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes

# S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="parknest-pro-uploads"

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# Email-based notifications (WhatsApp alternative)
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_SMS_NOTIFICATIONS="false"
ENABLE_WHATSAPP_NOTIFICATIONS="false"

# Twilio Configuration (optional SMS)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# WhatsApp Cloud API (future integration)
WHATSAPP_ACCESS_TOKEN="your_whatsapp_access_token"
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id"
WHATSAPP_WEBHOOK_VERIFY_TOKEN="your_webhook_verify_token"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# CORS settings
CORS_CREDENTIALS="true"
CORS_METHODS="GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS"

# Session security
SESSION_SECRET="your_session_secret_key_here"
COOKIE_SECURE="false"  # set to true in production with HTTPS
COOKIE_SAME_SITE="lax"

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LOG_LEVEL="info"  # error | warn | info | debug
LOG_FORMAT="json"  # json | simple
ENABLE_REQUEST_LOGGING="true"

# Health check configuration
HEALTH_CHECK_TIMEOUT="5000"  # 5 seconds
ENABLE_METRICS="true"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV="development"  # development | production | test
DEBUG="parknest:*"
ENABLE_SWAGGER="true"
ENABLE_SEED_DATA="true"

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Default company settings
DEFAULT_COMPANY_NAME="Demo Parking Solutions"
DEFAULT_TIMEZONE="Asia/Kolkata"
DEFAULT_CURRENCY="INR"
DEFAULT_TAX_RATE="18"  # GST percentage

# Pass configuration
DEFAULT_GRACE_DAYS="3"
QR_CODE_EXPIRY_HOURS="24"
REMINDER_DAYS="7,3,1"  # Days before expiry to send reminders

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ANPR="false"  # Automatic Number Plate Recognition
ENABLE_AI_FEATURES="false"  # Smart recommendations and fraud detection
ENABLE_MULTI_TENANT="true"  # Multi-company support
ENABLE_OFFLINE_MODE="true"  # Offline scanning support
ENABLE_REPORTS_EXPORT="true"  # CSV/Excel export functionality

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Google Maps (for location services)
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"

# Analytics (optional)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Error tracking (optional)
SENTRY_DSN="your_sentry_dsn"

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
POSTGRES_DB="parknest_pro"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres123"
REDIS_PASSWORD=""

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"
BACKUP_STORAGE_PATH="./backups"

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env.local files to version control
# 2. Use strong, unique passwords for all services
# 3. Enable HTTPS in production (set COOKIE_SECURE=true)
# 4. Regularly rotate JWT secrets and API keys
# 5. Monitor logs for security issues
# 6. Set up proper firewall rules for database access
# 7. Use environment-specific configurations for dev/staging/prod
